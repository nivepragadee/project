<body>

<div class="slider">
  <div class="slides" id="slides"></div>

  <div class="navigation">
    <div class="prev" onclick="prevSlide()">&#10094;</div>
    <div class="next" onclick="nextSlide()">&#10095;</div>
  </div>

  <div class="controls">
    <button onclick="togglePlay()" id="playPauseBtn">Pause</button>
  </div>

  <div class="dots" id="dots"></div>
</div>

<div class="thumbnails" id="thumbnails"></div>

<script>
  let currentIndex = 0;
  let autoSlide = true;
  let slideInterval;

  // Images dataset
  const images = [
    { url: "https://images.unsplash.com/photo-1506744038136-46273834b3fb" },
    { url: "https://images.unsplash.com/photo-1501785888041-af3ef285b470" },
    { url: "https://images.unsplash.com/photo-1491553895911-0055eca6402d" },
    { url: "https://images.unsplash.com/photo-1500530855697-b586d89ba3ee" },
    { url: "https://images.unsplash.com/photo-1523413651479-597eb2da0ad6" }
  ];

  const slides = document.getElementById('slides');
  const dotsContainer = document.getElementById('dots');
  const thumbnailsContainer = document.getElementById('thumbnails');

  // Load images dynamically
  function loadImages() {
    images.forEach((img, i) => {
      // Main slides
      let imageElement = document.createElement("img");
      imageElement.src = img.url;
      imageElement.loading = "lazy"; // Performance improvement
      slides.appendChild(imageElement);

      // Dots
      let dot = document.createElement("span");
      dot.classList.add("dot");
      dot.onclick = () => showSlide(i);
      dotsContainer.appendChild(dot);

      // Thumbnails
      let thumb = document.createElement("img");
      thumb.src = img.url;
      thumb.onclick = () => showSlide(i);
      thumbnailsContainer.appendChild(thumb);
    });
    updateSlider();
  }

  function showSlide(index) {
    currentIndex = (index + images.length) % images.length;
    slides.style.transform = `translateX(${-currentIndex * 100}%)`; // âœ… Fixed line

    document.querySelectorAll(".dot").forEach((dot, i) => {
      dot.classList.toggle("active", i === currentIndex);
    });
  }

  function nextSlide() {
    showSlide(currentIndex + 1);
  }

  function prevSlide() {
    showSlide(currentIndex - 1);
  }

  function startAutoSlide() {
    slideInterval = setInterval(nextSlide, 3000);
  }

  function stopAutoSlide() {
    clearInterval(slideInterval);
  }

  function togglePlay() {
    autoSlide = !autoSlide;
    const btn = document.getElementById("playPauseBtn");
    if (autoSlide) {
      startAutoSlide();
      btn.textContent = "Pause";
    } else {
      stopAutoSlide();
      btn.textContent = "Play";
    }
  }

  function updateSlider() {
    showSlide(currentIndex);
    if (autoSlide) startAutoSlide();
  }

  loadImages();
</script>

</body>
</html>
